{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!node_modules/", "!dist/", "!bun.lock"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    },
    "globals": ["Bun", "process"]
  },
  "overrides": [
    {
      "includes": ["*.mjs"],
      "linter": {
        "rules": {
          "style": {
            "useNodejsImportProtocol": "error"
          }
        }
      }
    }
  ]
}
